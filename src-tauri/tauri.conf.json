{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Appinapp",
  "version": "0.2.6",
  "identifier": "com.mutawirr.appinapp",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Appinapp",
        "width": 2560,
        "height": 1600,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "resizable": false,
        "maximized": true,
        "visible": true
      },
      {
        "label": "control",
        "title": "Control Panel",
        "width": 400,
        "height": 500,
        "visible": false,
        "shadow": false,
        "transparent": true,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

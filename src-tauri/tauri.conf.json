{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-app",
  "version": "0.1.0",
  "identifier": "com.user.tauri-app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Ãœbersicht Clone",
        "width": 800,
        "height": 600,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "resizable": false,
        "visible": true,
        "alwaysOnBottom": true,
        "visibleOnAllWorkspaces": true
      },
      {
        "label": "control",
        "title": "Control Menu",
        "width": 600,
        "height": 500,
        "visible": false,
        "shadow": false,
        "transparent": false,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
